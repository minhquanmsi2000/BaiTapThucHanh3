<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:outlineAmbientShadowColor="#471975">
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
        android:id="@+id/imghinh"
        android:layout_width="185dp"
        android:layout_height="183dp"
        android:layout_marginTop="15dp"
        android:outlineAmbientShadowColor="#251485"
        android:outlineSpotShadowColor="@android:color/holo_orange_dark" android:padding="10dp"
        app:srcCompat="@drawable/android_logo"/>
            <ImageView
                android:src="@drawable/custom_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
    </FrameLayout>

    <TextView
        android:id="@+id/txtten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:outlineSpotShadowColor="@android:color/holo_orange_dark"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtgia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#1B5D91"
        android:textSize="20dp"
        android:textStyle="italic"
        android:layout_marginLeft="5dp"
        />
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/themvaogiohang"
        android:layout_marginTop="-30dp"
        android:layout_marginLeft="140dp"/>

</LinearLayout>